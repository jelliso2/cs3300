<!DOCTYPE html>
<html>
  <head>
    <title>Cs3300</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarsExampleDefault">
  <a href="/" class="navbar-brand">Josh's Portfolio</a>
  
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
    </ul>
    
    <% if !user_signed_in? %>
    <%= link_to "Sign-Up", new_user_registration_path, class:"btn btn-outline-success my-2 my-sm-0", style:"margin-right: 10px;" %>
    <%= link_to "Sign-in", new_user_session_path, class:"btn btn-outline-success my-2 my-sm-0" %>
    <% end %>
  <% if user_signed_in? %>
    <%= link_to 'New Project', new_project_path, class:"btn btn-outline-success my-2 my-sm-0", style:"margin-right: 10px;" %>
    <%= link_to "Sign-out", destroy_user_session_path, method: :delete, class:"btn btn-outline-success my-2 my-sm-0" %>
  <% end %>
    
  </div>
</nav>


  
  <%= yield %>
    
  </body>
</html>
